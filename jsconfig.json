{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "checkJs": true,
    "strict": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.js",
    "server/**/*.js",
    "utils/**/*.js",
    "index.js",
    "app.js"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist",
    "build",
    ".vscode",
    "coverage"
  ]
}
